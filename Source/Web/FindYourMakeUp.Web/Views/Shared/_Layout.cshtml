<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FindYourMakeUp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/kendo")
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/custom")
    <meta name="description" content="Find the best make up for you" />
</head>
<body>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FindYourMakeUp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, null)</li>
                    <li class="">@Html.ActionLink("Products", "Index", "Products", new { area = string.Empty }, null)</li>
                    <li>
                        @* TODO: administrators only   @if (this.User.IsInRole(GlobalConstants.Admin))*@
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Administration<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Manage Products", "Index", "Products", new { area = "Administration" }, null)</li>
                            <li>@Html.ActionLink("Manage Categories", "Index", "Categories", new { area = "Administration" }, null)</li>
                            <li>@Html.ActionLink("Manage Manufacturers", "Index", "Manufacturers", new { area = "Administration" }, null)</li>
                        </ul>
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - FindYourMakeUp</p>
        </footer>
    </div>

    
    @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/kendo")
        @Scripts.Render("~/bundles/jqueryval")
    @*@Scripts.Render("~/bundles.unobtrusive-ajax")*@
    
    @RenderSection("scripts", required: false)
</body>

</html>
