@model FindYourMakeUp.Data.Models.Product
@{
    ViewBag.Title = "Details";
}
<div class="row">
    <div class="col-md-5">
        <h2>@Model.Name</h2>
        <span>@Model.Manufacturer.Name</span>
    </div>
    <div class="col-md-5">
        <h1 class="pull-right">
            <span class="alert @(( Model.Rating > 4.5 ? "alert-success": (@Model.Rating<0)? "alert-danger" : "alert-info"))">   Rating: @Model.Rating</span>






        </h1>
    </div>
</div>