@(Html.Kendo()
      .DropDownList()
          .Name("CategoryId")
      .DataValueField("Id")
      .DataTextField("Name")
      .OptionLabel(new { Name = "--Choose subcategory--", Id = "" })
      .DataSource(source =>
              {
                  source.Read(read =>
                  {
                      read.Action("GetCascadeSubCategories", "Products")
                          .Data("filterSubCategories");
                  })
                  .ServerFiltering(true);
              })
              .Enable(false)
              .AutoBind(false)
              .CascadeFrom("ParentCategoryId")
)            