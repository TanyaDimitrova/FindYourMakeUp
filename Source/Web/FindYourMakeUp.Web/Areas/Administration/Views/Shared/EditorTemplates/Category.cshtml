@(Html.Kendo()
      .DropDownList()
      .Name("ParentCategoryId")
      .DataValueField("Id")
      .DataTextField("Name")
      .OptionLabel(new { Name = "--Choose category--", Id = "" })
      .DataSource(source =>
      {
          source.Read(read =>
          {
              read.Action("GetCascadeCategories", "Products");
          });
      })
)